<%= form_with(model: @subscription ,:html => {:id =>"formBeauty"}) do |form| %>
  <% if @subscription.errors.any? %>
    <div style="color: var(--textDanger);margin-top:12px;margin-bottom:12px;" class="center">
      <span> <i>Upps ! Tienes algunos errores</i> </span> 
      <br>
    <ul>
      <% @subscription.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div style="flex-direction:column;">
  <%= form.label :email, class: "labelCustom" %>
  <%= form.email_field :email,required: true,autocomplete:'off' %>
</div>
<div class="">
  <label class="labelCustom opt">
  <%= I18n.t("str_preferences") %>
  </label>
</div>
<div>
</div>
<label class="container">
  <%= I18n.t("str_womensfashion") %>
  <%= form.check_box :isWomen %>
  <span class="checkmark"></span>
</label>
<label class="container">
  <%= I18n.t("str_mensfashion") %>
  <%= form.check_box :isMen %>
  <span class="checkmark"></span>
</label>
<label class="container">
  <%= I18n.t("str_childrenfashion") %>
  <%= form.check_box :isChildren %>
  <span class="checkmark"></span>
</label>
<div class="center">
  <%= form.submit I18n.t("str_subscribeme")  %>
</div>
<% end %>
